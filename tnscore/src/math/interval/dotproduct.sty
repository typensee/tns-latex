% Math tools - Intervals and co

\NewDocumentCommand\DeclareTripleDelimitersXXX{mmmm}{
    \ExpandArgs{c}\DeclarePairedDelimiterX{#1}[2]{#2}{#4}{%
    ##1 \,\delimsize#3\, ##2%
  }
}

\NewDocumentCommand\DeclareTripleDelimitersXnX{mmmm}{
    \ExpandArgs{c}\DeclarePairedDelimiterX{#1}[2]{#2}{#4}{%
    ##1 \,{#3}\, ##2%
  }
}
