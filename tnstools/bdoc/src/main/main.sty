    raggedentrytext,
    linefill = \hfill,
    indent   = 0pt,
    dynindent,
    numwidth = 0pt,
    numsep   = 1ex,
    dynnumwidth
]{tocline}{
    chapter,
    section,
    subsection,
    subsubsection,
    paragraph,
    subparagraph
}

